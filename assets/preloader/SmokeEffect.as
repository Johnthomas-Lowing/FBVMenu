import flash.geom.Point;class SmokeEffect extends MovieClip {	//colour of line in effect	public var colour:Number = 0xFFFFFF;	public var spread:Number = 2;	//adjust this number to increase decrease size of effect	public var lifetime:Number = 1000;	private var points:Array;	private var prev:Point;	public function SmokeEffect() {		this.points = new Array({x:0, y:0});		this.prev = new Point();	}	private function onEnterFrame():Void {		this.points[0].x = 0;		this.points[0].y = 0;		var ax:Number = 0;		var ay:Number = 0;		this.points.splice(1, 0, {x:this._x, y:this._y, bx:(ax + Math.random() * [-this.spread, this.spread][Math.round(Math.random())]) / 5, by:(ay + Math.random() * [-this.spread, this.spread][Math.round(Math.random())]) / 5, life:getTimer()});		this.clear();				for (var i:Number = 1; i < this.points.length; i++) {			if (getTimer() - this.points[i].life > this.lifetime) {							} else {				this.lineStyle(1, this.colour, Math.abs(1 - ((getTimer() - this.points[i].life) / this.lifetime)) * 100);				this.points[i].x += this.points[i].bx;				this.points[i].y += this.points[i].by;				var cx:Number = this.points[i - 1].x;				var cy:Number = this.points[i - 1].y;				this.curveTo(cx, cy, (this.points[i].x + cx) / 2, (this.points[i].y + cy) / 2);			}		}			}}